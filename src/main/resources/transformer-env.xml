<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- conf中需要添加的MySQL配置 -->
<configuration>
    <property>
        <name>mysql.report.driver</name>
        <value>com.mysql.jdbc.Driver</value>
    </property>
    <property>
        <name>mysql.report.url</name>
        <value>jdbc:mysql://hadoop:3306/report?useUnicode=true&amp;characterEncoding=utf8&amp;useSSL=false</value>
    </property>
    <property>
        <name>mysql.report.username</name>
        <value>root</value>
    </property>
    <property>
        <name>mysql.report.password</name>
        <value>root</value>
    </property>
    <property>
        <name>mysql.batch.number</name>
        <value>500</value>
    </property>
</configuration>
